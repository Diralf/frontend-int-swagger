{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:eslint-plugin/recommended",
    "plugin:node/recommended",
    "standard-with-typescript"
  ],
  "plugins": ["eslint-plugin-local-rules"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.js"
      ],
      "env": {
        "mocha": true
      }
    },
    {
      "files": [
        "**/*.ts"
      ],
      "rules": {
        "local-rules/interface-is-dto": "warn"
      }
    }
  ]
}
